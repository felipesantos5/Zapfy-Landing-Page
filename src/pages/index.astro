<style>
  .texto-apagado {
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0.22), rgb(192, 192, 192));
    background-clip: text;
    color: transparent;
  }
  .texto-destaque {
    padding: 8px;
    padding-inline: 20px;
    background-image: linear-gradient(to right, rgba(38, 34, 5, 0.3), rgba(38, 34, 5, 1));
    background-clip: padding-box;
    color: #aa9c13;
